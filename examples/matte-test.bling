

# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
#filter box

imageSize 640 480
sampler { stratified xSamples 3 ySamples 3 }


transform {
   lookAt {
      pos 7.0 6.0 -3.0
      look 0 1 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 70
   lensRadius 0.3
   focalDistance 10
}

beginCamera
pos 0.0 15.0 -9.0
lookAt 0.0 1.0 0.0
up 0.0 1.0 0.0
fov 1.3
endCamera

#
# ground plane
#

beginMaterial type matte
   beginTexture kd
      type constant
      rgb 0.7 0.7 0.7
   endTexture
   sigma { constant 0.0 }
endMaterial

beginShape
   type mesh
   vertexCount 4
   faceCount 1
   v  50.0 0.0 -50.0
   v -50.0 0.0 -50.0
   v -50.0 0.0  50.0
   v  50.0 0.0  50.0
   f 3 2 1 0
endShape

#
# light source
#

beginEmission
   rgb 1.9 1.9 1.9
endEmission

beginTransform
   identity
   scale 5.0 1.0 5.0
   translate 0.0 5.0 0.0
endTransform

beginShape
   type mesh
   vertexCount 4
   faceCount 1
   v 2.0 15.7 -2.0
   v 2.0 15.7 2.0
   v -2.0 15.7 2.0
   v -2.0 15.7 -2.0
   f 3 2 1 0
endShape

#
# sphere 1
#

beginEmission
   black
endEmission

beginTransform
   identity
   translate -5.0 3.0 0.0
endTransform

beginMaterial type matte
   beginTexture kd
      type constant
      rgb 0.3 0.4 0.2
   endTexture
   sigma { constant 0.5 }
endMaterial

beginShape type sphere radius 2.0 endShape

#
# sphere 2
#

beginTransform
   identity
   translate 0.0 3.0 0.0
endTransform

beginMaterial type matte
   beginTexture kd
      type constant
      rgb 0.3 0.4 0.2
   endTexture
   sigma { constant 5.0 }
endMaterial

beginShape type sphere radius 2.0 endShape


#
# sphere 3
#

beginTransform
   identity
   translate 5.0 3.0 0.0
endTransform

beginMaterial type matte
   beginTexture kd
      type constant
      rgb 0.3 0.4 0.2
   endTexture
   sigma { constant 50.0 }
endMaterial

beginShape type sphere radius 2.0 endShape
