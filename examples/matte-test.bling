
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
#filter box

imageSize 640 480

renderer {
   sampler
   sampled {
      sampler { stratified xSamples 6 ySamples 6 }
      integrator { path maxDepth 5 sampleDepth 2 }
   }
}

# renderer { metropolis maxDepth 5 mpp 1 bootstrap 1000 plarge 0.25 directSamples 4 }

transform {
   lookAt {
      pos 9 15 -9
      look 0 1 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 45
   lensRadius 0
   focalDistance 10
}

transform { identity }

#
# ground plane
#

material {
   matte
   kd { constant rgb 0.9 0.9 0.9 }
   sigma { constant 0 }
}

shape {
   mesh
   vertexCount 4
   faceCount 1
   v  50.0 1 -50.0
   v -50.0 1 -50.0
   v -50.0 1  50.0
   v  50.0 1  50.0
   f 3 2 1 0
}

#
# light source
#

material { blackbody }
emission { rgb 10 10 10 }

shape {
   mesh
   vertexCount 4
   faceCount 1
   v  10.0 50 -10
   v  10.0 50 10
   v -10.0 50 10
   v -10.0 50 -10
   f 0 1 2 3
}

emission { none }

transform { identity translate -5.0 3 -2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0 }
}

shape { sphere radius 2.0 }

transform { identity translate 0.0 3 -2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0.2 }
}

shape { sphere radius 2.0 }

transform { identity translate 5.0 3 -2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0.4 }
}

shape { sphere radius 2.0 }

transform { identity translate -5.0 3 2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0.6 }
}

shape { sphere radius 2.0 }

