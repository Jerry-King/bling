
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
#filter box

imageSize 1280 720
imageSize 640 360

renderer {
   sampler
   sampled {
      sampler { stratified 3 3 }
      integrator { path maxDepth 5 sampleDepth 2 }
   }
}

# renderer { sampler sampled { sampler { random samples 1 } integrator { debug normals } } }
# renderer { metropolis maxDepth 5 mpp 1 bootstrap 1000 plarge 0.25 directSamples 4 }

transform {
   lookAt {
      pos 9 15 -9
      look 0 1 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 45
   lensRadius 0
   focalDistance 10
}

newTransform { }

#
# ground plane
#

material {
   matte
   kd { constant rgbR 0.9 0.9 0.9 }
   sigma { constant 0 }
}

prim {
   mesh
   vertexCount 4
   faceCount 1
   v  50.0 1 -50.0
   v -50.0 1 -50.0
   v -50.0 1  50.0
   v  50.0 1  50.0
   f 3 2 1 0
}

#
# light source
#

material { blackbody }
emission { rgbI 2 2 2 }
newTransform { rotateX -90 translate 0 25 0 } prim { shape { quad 10 10 } }
emission { none }

newTransform { translate -5.0 3 -2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0 }
}

prim { shape { sphere radius 2.0 } }

newTransform { translate 0.0 3 -2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0.2 }
}

prim { shape { sphere radius 2.0 } }

newTransform { translate 5.0 3 -2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0.4 }
}

prim { shape { sphere radius 2.0 } }

newTransform { translate -5.0 3 2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0.6 }
}

prim { shape { sphere radius 2.0 } }

newTransform { translate 0.0 3 2.5 }

material {
   matte
   kd { constant spd { 1 0.78 } }
   sigma { constant 0.8 }
}

prim { shape { sphere radius 2.0 } }

newTransform { translate 5.0 3 2.5 }

material {
