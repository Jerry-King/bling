transform {
   lookAt {
      pos 0 15 0
      look 0 0 0
      up 0 0 1
   }
}

camera {
   perspective
   fov 80
   lensRadius 0
   focalDistance 10
}

transform { identity }

material {
   matte
   kd { constant spd { 0 0.5 }}
   sigma { constant 0 }
}

# ground plane

shape {
   mesh
   vertexCount 4
   faceCount 1
   v  10 0 -10
   v -10 0 -10
   v -10 0  10
   v  10 0  10
   f 3 2 1 0
}

emission {
   rgb 1 1 1
}

shape {
   mesh
   vertexCount 4
   faceCount 2
   v -10  0 -3
   v -10  3 -3
   v -10  0  3
   v -10  3  3
   f 0 1 2
   f 1 3 2
}
