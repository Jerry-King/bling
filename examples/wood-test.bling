
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
# filter box

imageSize 640 480

renderer {
   sampler
   sampled {
      sampler { stratified xSamples 1 ySamples 1 }
      integrator { path maxDepth 3 sampleDepth 3 }
   }
}

transform {
   lookAt {
      pos 0 10 -10
      look 0 2 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 40
   lensRadius 0
   focalDistance 10
}

#
# ground plane
#

newTransform { rotateX 90 }

material {
   matte
   kd { constant rgb 0.9 0.9 0.9 }
   sigma { constant 0.5 }
}

prim { shape { quad 50 50 } }

#
# light source
#

emission { rgbIllum 100 100 100 }

newTransform {
   rotateX -90
   translate 0 25 0
}

prim { shape { quad 2 2 } }

emission { none }

# light { infinite { rotateX -90 }
#   l { rgbeFile "envmaps/studio015.hdr" }
#    l { constant rgb 1 1 1 }
# }

material {
   matte
   kd { wood }
   sigma { constant 0.5 }
}

newTransform {
   translate 0 4 0
}

prim { shape { sphere radius 2 } }

transform { translate 0 0 0 }
prim { shape { box pmin -3 0 -3 pmax 3 2 3 } }
