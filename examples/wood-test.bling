
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
filter box

imageSize 640 480

renderer {
   sampler
   sampled {
      sampler { stratified xSamples 2 ySamples 2 }
      integrator { path maxDepth 3 }
   }
}

transform {
   lookAt {
      pos 9 15 -9
      look 0 1 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 45
   lensRadius 0
   focalDistance 10
}

transform { identity }

#
# ground plane
#

material {
   matte
   kd { wood }
   sigma { constant 0.0 }
}

shape {
   mesh
   vertexCount 4
   faceCount 1
   v  50.0 0.0 -50.0
   v -50.0 0.0 -50.0
   v -50.0 0.0  50.0
   v  50.0 0.0  50.0
   f 3 2 1 0
}

#
# light source
#

emission { temp 3100 }

transform {
   identity
   scale 5.0 1.0 5.0
   translate 0.0 5.0 0.0
}

shape {
   mesh
   vertexCount 4
   faceCount 1
   v 2.0 15.7 -2.0
   v 2.0 15.7 2.0
   v -2.0 15.7 2.0
   v -2.0 15.7 -2.0
   f 3 2 1 0
}

emission { none }

#
# sphere 1
#

transform {
   identity
   translate -5.0 3.0 -2.5
}

material { plastic
   kd { constant rgb 0.49 0.3 0.02 }
   ks { constant rgb 0.5 0.5 0.5 }
   rough { constant 0.2 }
}

shape { sphere radius 2.0 }

