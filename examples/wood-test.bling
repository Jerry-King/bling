
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
# filter box

imageSize 640 480

renderer {
   sampler
   sampled {
      sampler { stratified xSamples 3 ySamples 3 }
      integrator { path maxDepth 3 sampleDepth 3 }
   }
}

transform {
   lookAt {
      pos 9 15 -9
      look 0 1 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 45
   lensRadius 0
   focalDistance 10
}

transform { identity }

#
# ground plane
#

material {
   matte
   kd { blend
      tex1 { constant rgb 0.9 0.56 0.1 }
      tex2 { constant rgb 0.56 0.1 0.7 }
      f { crystal octaves 7 map {
         planar
         10 0 0
         0 0 10
         1 1
         }
      }
   }
   sigma { constant 0.5 }
}

shape {
   mesh
   vertexCount 4
   faceCount 1
   v  50 0 -50
   v -50 0 -50
   v -50 0  50
   v  50 0  50
   f 3 2 1 0
}

#
# light source
#

transform { identity rotateX -90 }

light { infinite
   l { rgbeFile "envmaps/studio015.hdr" }
}

transform { identity }

#
# sphere 1
#

transform {
   identity
   translate 0 5 0
}

material { plastic
   kd { constant rgb 0.01 0.01 0.01 }
   ks { constant rgb 0.9 0.9 0.9 }
   rough { crystal octaves 5 map { uv 100 100 0 0 } }
}

shape { sphere radius 5 }
