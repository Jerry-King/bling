
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
filter box

imageSize 640 480

renderer {
   sampler
   sampled {
      sampler { stratified xSamples 2 ySamples 2 }
      integrator { path maxDepth 3 sampleDepth 3 }
   }
}

transform {
   lookAt {
      pos 9 15 -9
      look 0 1 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 45
   lensRadius 0
   focalDistance 10
}

transform { identity }

#
# ground plane
#

material {
   matte
   kd { constant rgb 0.9 0.9 0.9 }
   sigma { constant 0.5 }
}

shape {
   mesh
   vertexCount 4
   faceCount 1
   v  50 0 -50
   v -50 0 -50
   v -50 0  50
   v  50 0  50
   f 3 2 1 0
}

#
# light source
#

emission { rgb 20 20 20 }

transform {
   identity
   translate 0 5 0
}

shape {
   mesh
   vertexCount 4
   faceCount 1
   v  2 15 -2
   v  2 15  2
   v -2 15  2
   v -2 15 -2
   f 0 1 2 3
}

emission { none }

#
# sphere 1
#

transform {
   identity
   translate 0 5 0
}

material { plastic
   kd { blend
      tex1 { constant rgb 0.9 0.56 0.1 }
      tex2 { constant rgb 0.56 0.1 0.7 }
      f { crystal octaves 21 map { uv 200 200 0 0 } }
   }
   
   ks { constant rgb 0.5 0.5 0.5 }
   rough { constant 0.005 }
}

shape { sphere radius 5 }
