#filter box

imageSize 640 480
samplesPerPixel 1

camera {
   pos 0.0 15.0 -9.0
   lookAt 0.0 1.0 0.0
   up 0.0 1.0 0.0
   fov 1.3
}

#
# ground plane
#

material {
   matte
   kd {
      graphPaper 0.1
      tex1 { constant rgb 0.7 0.7 0.7 }
      tex2 { constant rgb 0.2 0.2 0.2 }
   }
   sigma { constant 0.0 }
}

beginShape
   type mesh
   vertexCount 4
   faceCount 1
   v  50.0 0.0 -50.0
   v -50.0 0.0 -50.0
   v -50.0 0.0  50.0
   v  50.0 0.0  50.0
   f 3 2 1 0
endShape

