

# metal

filter mitchell 3.0 3.0 0.333333 0.333333
#filter box

imageSize 640 480
samplesPerPixel 1

beginCamera
pos 0.0 15.0 -9.0
lookAt 0.0 1.0 0.0
up 0.0 1.0 0.0
fov 1.3
endCamera

#
# ground plane
#

material {
   matte
   kd {
      graphPaper 0.1
      tex1 { constant rgb 0.7 0.7 0.7 }
      tex2 { constant rgb 0.2 0.2 0.2 }
   }
   sigma { constant 0.0 }
}

beginShape
   type mesh
   vertexCount 4
   faceCount 1
   v  50.0 0.0 -50.0
   v -50.0 0.0 -50.0
   v -50.0 0.0  50.0
   v  50.0 0.0  50.0
   f 3 2 1 0
endShape

#
# light source
#

beginEmission
   rgb 1.9 1.9 1.9
endEmission

beginTransform
   identity
   scale 5.0 1.0 5.0
   translate 0.0 5.0 0.0
endTransform

beginShape
   type mesh
   vertexCount 4
   faceCount 1
   v 2.0 15.7 -2.0
   v 2.0 15.7 2.0
   v -2.0 15.7 2.0
   v -2.0 15.7 -2.0
   f 3 2 1 0
endShape

#
# Gold Sphere (left)
#

beginEmission
   black
endEmission

beginTransform
   identity
   translate -5.0 3.0 0.0
endTransform

material {
   metal
   eta { constant rgb 0.1 0.1 0.1 }
   k { constant rgb 0.95 0.8 0.01 }
   rough { constant 0.002 }
}

beginShape type sphere radius 2.0 endShape

#
# sphere 2
#

beginTransform
   identity
   translate 0.0 3.0 0.0
endTransform

material {
   metal
   eta {
      checker 5.0 5.0 5.0
      tex1 { constant rgb 0.7 0.7 0.7 }
      tex2 { constant rgb 0.2 0.2 0.2 }
   }
   k { constant rgb 0.2 0.9 0.2 }
   rough { constant 0.1 }
}

beginShape type sphere radius 2.0 endShape

#
# sphere 3
#

beginTransform
   identity
   translate 5.0 3.0 0.0
endTransform

material {
   metal
   eta { constant rgb 0.9 0.2 0.2 }
   k { constant rgb 0.2 0.9 0.2 }
   rough { constant 0.02 }
}

beginShape type sphere radius 2.0 endShape

