
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
# filter box

imageSize 640 480

renderer {
   sampler
   sampled {
      sampler { stratified xSamples 2 ySamples 2 }
      integrator { path maxDepth 5 sampleDepth 3 }
   }
}

# renderer { metropolis mpp 1 bootstrap 1000 plarge 0.25 separateDirect }

transform {
   lookAt {
      pos 3 8 -9
      look 0 1 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 70
   lensRadius 0
   focalDistance 10
}

# transform { identity } camera { environment }

transform { identity rotateX -90 }

light {
   infinite
   l { rgbeFile "./examples/envmaps/studio015.hdr" }
}

transform { identity }

#
# ground plane
#

material {
   matte
   kd { constant rgb 0.7 0.7 0.7 }
   sigma { constant 0 }
}

shape {
   mesh
   vertexCount 4
   faceCount 1
   v  10 1 -10
   v -10 1 -10
   v -10 1  10
   v  10 1  10
   f 3 2 1 0
}

emission { none }

#
# mirror sphere
#

transform {
   identity
   translate -5 3 -2.5
}

material { mirror
   kr { constant rgb 1 1 1 }
}

shape { sphere radius 2 }

#
# glass sphere
#

transform {
   identity
   translate 0.0 3 -2.5
}

material { glass
   ior { constant 1.5 }
   kr { constant rgb 1 1 1 }
   kt { constant rgb 1 0.5 0.6 }
}


shape { sphere radius 2 }

