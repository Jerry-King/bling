
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
filter box

imageSize 640 480

renderer {
   sampler
   sampled {
      sampler { stratified xSamples 4 ySamples 4 }
      integrator { path maxDepth 7 sampleDepth 4 }
   }
}

# renderer { metropolis mpp 1 bootstrap 1000 plarge 0.25 separateDirect }

transform {
   lookAt {
      pos 9 15 -9
      look 0 1 0
      up 0 1 0
   }
}

camera {
   perspective
   fov 45
   lensRadius 0
   focalDistance 10
}

# transform { identity } camera { environment }

newTransform { }

#
# ground plane
#

material {
   matte
   kd { constant rgb 0.7 0.7 0.7 }
   sigma { constant 0.0 }
}

prim {
   mesh
   vertexCount 4
   faceCount 1
   v  50.0 1 -50.0
   v -50.0 1 -50.0
   v -50.0 1  50.0
   v  50.0 1  50.0
   f 3 2 1 0
}


emission {
   spd { 400.0 0.0, 500.0 8.0, 600.0 15.6, 700.0 18.4 }
}

newTransform { rotateX -90 translate 0 20 0  }

prim { shape { quad 10 10 } }

emission { none }

