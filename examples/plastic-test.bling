
# plastic

filter mitchell 3.0 3.0 0.333333 0.333333
#filter box

imageSize 640 480
samplesPerPixel 2

beginCamera
pos 9.0 15.0 -9.0
lookAt 0.0 1.0 0.0
up 0.0 1.0 0.0
fov 1.3
endCamera

#
# ground plane
#

beginMaterial type matte
   beginTexture kd
      type constant
      rgb 0.7 0.7 0.7
   endTexture
   beginScalarTexture sigma
      type constant 0.0
   endScalarTexture
endMaterial

beginShape
   type mesh
   vertexCount 4
   faceCount 1
   v  50.0 0.0 -50.0
   v -50.0 0.0 -50.0
   v -50.0 0.0  50.0
   v  50.0 0.0  50.0
   f 3 2 1 0
endShape

# light source
beginEmission
   rgb 0.9 0.9 0.9
endEmission

beginTransform
   identity
   scale 5.0 1.0 5.0
   translate 0.0 5.0 0.0
endTransform

beginShape
   type mesh
   vertexCount 4
   faceCount 1
   v 2.0 15.7 -2.0
   v 2.0 15.7 2.0
   v -2.0 15.7 2.0
   v -2.0 15.7 -2.0
   f 3 2 1 0
endShape

